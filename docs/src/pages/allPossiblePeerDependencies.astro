---
import Layout from '../components/Layout.astro'
import Header from '../components/Header.astro'
import { peerDependencies } from '../plugins'
---

<Layout title='All possible peer dependencies'>
  <Header current='../allPossiblePeerDependencies/index.html' />
  <main class='p-3'>
    <code class='selectable'
      >{
        peerDependencies.map(d => {
          return (
            <>
              <button
                class='btn selectable'
                title='Copy install'
                aria-label='Copy install'
                onclick={`navigator.clipboard.writeText('npm i -D ${d}')`}
              >
                {d}
              </button>
              <span
                class='selectable d-inline-block'
                style={{ width: '0px' }}
                aria-hidden='true'
              >
                &nbsp;
              </span>
            </>
          )
        })
      }</code
    >
  </main>
</Layout>

<style>
  .selectable {
    -webkit-user-select: text !important;
    -moz-user-select: text !important;
    -ms-user-select: text !important;
    user-select: text !important;
  }
</style>
