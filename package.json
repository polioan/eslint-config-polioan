{
  "name": "eslint-config-polioan",
  "version": "2.0.0",
  "author": {
    "name": "Ivan Polushin",
    "url": "https://t.me/polioan"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/polioan/eslint-config-polioan"
  },
  "homepage": "https://github.com/polioan/eslint-config-polioan#readme",
  "bugs": {
    "url": "https://github.com/polioan/eslint-config-polioan/issues"
  },
  "funding": "https://boosty.to/polioan",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslintconfig",
    "code style",
    "config",
    "preset",
    "polioan"
  ],
  "description": "Shared eslint config 'polioan'",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup --config rollup.config.mjs",
    "test:types": "tsc --noEmit",
    "test": "npm run test:types",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "publish:dryrun": "npm publish --dry-run",
    "check": "npm run format:check && npm run test && npm run publish:dryrun",
    "pack": "npm run build && rimraf pack && mkdir pack && npm pack --pack-destination pack"
  },
  "dependencies": {
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-jsdoc": "^53.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-typescript-enum": "^2.1.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-validate-jsx-nesting": "^0.1.1",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.39.1"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.2.1",
    "jiti": "^2.5.1",
    "prettier": "^3.5.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "rollup-plugin-dts": "^6.2.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
